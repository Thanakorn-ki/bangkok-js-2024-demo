{
  "name": "acme",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "format": "prettier -w src",
    "preview": "vite preview",
    "build:api": "esbuild src/server/main.ts --bundle --platform=node --external:@azure/functions-core --outfile=src/server/dist/main.js",
    "dev": "run-p -l 'dev:*'",
    "dev:swa": "swa start http://localhost:5173 --run \"npm run start\" --api-location src/server --port 3000 --api-devserver-url http://127.0.0.1:3030",
    "dev:func-watch": "run-s build:api && nodemon --watch src/server --ext ts --exec 'run-s build:api'",
    "dev:func": "func start --prefix src/server/ --cors-credentials --port 3030"
  },
  "dependencies": {
    "@trpc/server": "^10.45.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "superjson": "^2.2.1",
    "trpc-azure-functions-adapter": "^0.0.5",
    "zod": "^3.23.3"
  },
  "devDependencies": {
    "@azure/static-web-apps-cli": "^2.0.1",
    "@types/eslint": "^8.56.10",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^8.57.0",
    "nodemon": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "typescript": "^5.5.3",
    "vite": "^5.4.0"
  }
}